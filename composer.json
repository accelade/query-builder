{
    "name": "accelade/query-builder",
    "description": "Query builder engine for Accelade - build, filter, sort, and paginate Eloquent queries with a fluent API",
    "type": "library",
    "license": "MIT",
    "repositories": [
        {
            "type": "path",
            "url": "../accelade",
            "options": {
                "symlink": true
            }
        }
    ],
    "authors": [
        {
            "name": "Fady Mondy",
            "email": "info@3x1.io",
            "homepage": "https://3x1.io",
            "role": "Developer"
        }
    ],
    "homepage": "https://github.com/accelade/query-builder",
    "keywords": [
        "laravel",
        "blade",
        "accelade",
        "query-builder",
        "eloquent",
        "filter",
        "sort",
        "pagination"
    ],
    "require": {
        "php": "^8.2",
        "accelade/accelade": "^1.0.0",
        "illuminate/support": "^11.0|^12.0",
        "illuminate/database": "^11.0|^12.0"
    },
    "require-dev": {
        "laravel/pint": "^1.18",
        "orchestra/testbench": "^9.0|^10.0",
        "pestphp/pest": "^3.0",
        "pestphp/pest-plugin-laravel": "^3.0"
    },
    "autoload": {
        "psr-4": {
            "Accelade\\QueryBuilder\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Accelade\\QueryBuilder\\Tests\\": "tests/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Accelade\\QueryBuilder\\QueryBuilderServiceProvider"
            ],
            "aliases": {
                "QueryBuilder": "Accelade\\QueryBuilder\\Facades\\QueryBuilder"
            }
        }
    },
    "scripts": {
        "test": "pest",
        "test:coverage": "pest --coverage",
        "format": "pint",
        "format:test": "pint --test",
        "mago": "./mago lint src/ || mago lint src/",
        "mago:fix": "./mago lint src/ --fix || mago lint src/ --fix",
        "analyse": [
            "@format:test",
            "@mago"
        ],
        "ci": [
            "@analyse",
            "@test"
        ]
    },
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "version": "v1.0.0"
}
